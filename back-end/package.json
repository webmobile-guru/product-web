  "private": true,
  "main": "server/server.ts",
  "engines": {
    "node": ">=10.13.0"
  },
  "scripts": {
    "start": "ts-node .",
    "quick-start": "ts-node .",
    "dev": "npm run prestart && ts-node-dev .",
