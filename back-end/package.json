    "axios-cookiejar-support": "^0.5.0",
    "chai": "^4.2.0",
    "common": "file:../common",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "faker": "^4.1.0",
    "get-value": "^3.0.1",
